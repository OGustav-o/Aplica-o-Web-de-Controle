{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["DOM", "ES2022"],
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Node",
        "ignoreDeprecations": "6.0",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["src"]
}